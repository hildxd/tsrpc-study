// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/@prisma/client/generate-client"
  previewFeatures = ["fullTextSearch", "extendedWhereUnique", "filteredRelationCount", "fieldReference"]
  relationMode    = "prisma"
}

generator tsrpc {
  provider = "node ./node_modules/@stringke/prisma-generator-tsrpc"
  output   = "../src/shared/db"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// 用户
model User {
  /// ID 主键
  id         Int       @id @default(autoincrement())
  /// uid
  uid        String    @unique
  /// 昵称
  nickName   String    @unique
  /// 用户名
  username   String    @unique
  /// 密码
  password   String
  /// 文章
  posts      Post[]
  /// 权限
  roles      String[]
  /// 创建时间
  createTime DateTime  @default(now())
  /// 修改时间
  updateTime DateTime? @updatedAt
  /// 标签
  Tag        Tag[]
}

/// 文章
model Post {
  /// ID 主键
  id         Int       @id @default(autoincrement())
  /// 标题
  title      String
  /// 内容
  content    String    @default("")
  /// 是否已发布
  pubished   Boolean   @default(false)
  /// 作者
  author     User      @relation(fields: [authorId], references: [uid])
  /// 作者id
  authorId   String
  /// 创建时间
  createTime DateTime  @default(now())
  /// 修改时间
  updateTime DateTime? @updatedAt

  Post_Tag Post_Tag[]
}

model Post_Tag {
  post   Post @relation(fields: [postId], references: [id])
  tag    Tag  @relation(fields: [tagId], references: [id])
  postId Int
  tagId  Int

  @@id([postId, tagId])
}

/// 标签
model Tag {
  /// ID
  id         Int        @id @default(autoincrement())
  /// 名字
  name       String
  /// 用户
  user       User       @relation(fields: [userId], references: [uid])
  /// 用户id
  userId     String
  /// 创建时间
  createTime DateTime   @default(now())
  Post_Tag   Post_Tag[]
}
